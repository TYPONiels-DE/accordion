{
    "name": "typoniels/accordion",
    "description": "A simple accordion content element for structuring large amounts of content, e.g. for the privacy policy. The Accordion is based on Irre records and offers a search function in addition to icons. In use at www.typoniels.de/datenschutzerklaerung",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "require": {
        "typo3/cms-backend": "^8.7 || ^9.5 || ^10.4",
        "typo3/cms-core": "^8.7 || ^9.5 || ^10.4",
        "typo3/cms-extbase": "^8.7 || ^9.5 || ^10.4",
        "typo3/cms-fluid": "^8.7 || ^9.5 || ^10.4",
        "typo3/cms-frontend": "^8.7 || ^9.5 || ^10.4",
        "friendsoftypo3/frontend-editing": "^2"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "platform": {
            "php": "7.4"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12.88",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "replace": {
        "typo3-ter/accordion": "self.version"
    },
    "autoload": {
        "psr-4": {
            "TN\\Accordion\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public",
            "extension-key": "accordion"
        }
    }
}
